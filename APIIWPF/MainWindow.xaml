        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:APIIWPF"
        mc:Ignorable="d"
        Title="LosowyCytat" Height="250" Width="500">
    <Grid>
        <TextBlock Name="Poradatxt" Text="Kliknij aby uzyskac losową porada!"
                   Margin="10,10,10,60" FontSize="16" TextAlignment="Center" VerticalAlignment="Center"/>
